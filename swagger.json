{
  "openapi": "3.0.3",
  "info": {
    "title": "Serverless Challenge API",
    "version": "1.0.0",
    "description": "API para combinar personajes y almacenar historial usando AWS CDK + Lambda + Cognito + DynamoDB + Cloudwatch + Gateway"
  },
  "paths": {
    "/fusionar": {
      "get": {
        "summary": "Fusiona personajes de Star Wars con Pokémons",
        "description": "Devuelve una lista combinada de personajes y pokémons. Usa caché para evitar llamadas repetidas.",
        "responses": {
          "200": {
            "description": "Combinación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "newStarWarCharacters": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "timestamp": {
                            "type": "number"
                          },
                          "name": {
                            "type": "string"
                          },
                          "homeworld": {
                            "type": "string"
                          },
                          "pokemon": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/almacenar": {
      "post": {
        "summary": "Guarda un post (Información personalizada)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Stored successfully"
                  }
                },
                "required": [
                  "user",
                  "description"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Datos almacenados correctamente"
          },
          "401": {
            "description": "No autorizado"
          }
        }
      }
    },
    "/historial": {
      "get": {
        "summary": "Ver historial de combinaciones",
        "description": "Devuelve las combinaciones almacenadas en DynamoDB",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de registros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "homeworld": {
                            "type": "string"
                          },
                          "pokemon": {
                            "type": "string"
                          },
                          "timestamp": {
                            "type": "number"
                          }
                        }
                      }
                    },
                    "page": {
                      "type": "integer"
                    },
                    "total": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "No autorizado"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}